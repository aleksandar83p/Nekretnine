                <label for="priEmail" class="col-sm-4 control-label" style="text-align:left">Korisnicko ime:</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" id="priEmail" />
                </div>
            </div>
            <div class="form-group">
                <label for="priLoz" class="col-sm-4 control-label" style="text-align:left">Lozinka:</label>
                <div class="col-sm-8">
                    <input class="form-control" type="password" id="priLoz" />
                </div>
            </div>
            <div class="form-group">

            </div>
            <div class="form-group">
                <div class="col-sm-2">

                </div>
                <div class="center-block" style="float:left">
                    <button type="button" class="btn btn-default button1" id="btnRegistracija"> Registracija </button>
                </div>
                <div class="col-sm-2">

                </div>
                <div class="center-block">
                    <button type="submit" class="btn btn-default button3" style="color: black"> Prijava </button>
                </div>

            </div>
        </form>
        <br />

    </div>
</div>
