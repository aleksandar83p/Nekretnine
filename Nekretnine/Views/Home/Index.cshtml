@* PRIJAVA i REGISTRACIJA------------------------------------------------------------------------------------------------------------*@
<div class="container hidden" id="divPrijava">
    <br />
    <div class="col-sm-offset-3 col-sm-6">
        <div class="col-sm-6">
            <button class="btn btn-default button2" id="btnPocetak"> Pocetak </button>
