@* TABELA i PRETRAGA ------------------------------------------------------------------------------------------------------------ *@
<div class="container">
    <div class="container" id="ulogovan">
        <h2>Nekretnine</h2>
        <br />
        <table id="tabela">
            <thead>
                <tr class="warning">
                    <th>Mesto</th>
                    <th>Oznaka</th>
                    <th>Izgradnja</th>
                    <th>Kvadratura</th>
                    <th>Cena</th>
                    <th>Agent</th>
                    <th class="showHide hidden">Brisanje</th>
                    <th class="showHide hidden">Izmena</th>
                </tr>
            </thead>
            <tbody id="tabelaPodaci"></tbody>
        </table>
    </div>

    <div class="container hidden" id="pretraga" style="float: left;  width: 24%;">
        <br />
        <br />
        <br />
        <div class="form-group">
            <h4>Pretraga po kvadraturi</h4>
        </div>
        <div class="col-sm-offset-2 col-sm-5">
            <form method="post" action="post/" class="form-horizontal" id="formPretraga">
                <div class="form-group">
                    <label class="col-sm-5 control-label" style="text-align:left; float:left;">Od: </label>
                    <div class="col-sm-4">

                    </div>
                    <div class="col-sm-4">
                        <input type="number" class="form-control col-sm-8" id="najmanje" step="0.01" style="width: 150px" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label" style="text-align:left; float:left;">Do: </label>
                    <div class="col-sm-4">

                    </div>
                    <div class="col-sm-4">
                        <input class="form-control col-sm-5" type="number" id="najvise" step="0.01" style="width: 150px" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-default button3"> Pretraga </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>


@* IZMENA ---------------------------------------------------------------------------------------------------------- *@
<div class="container hidden" id="izmena">
    <br />
    <br />
    <div class="row">
        <div class="form-group">
            <h2>Izmena nekretnina</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            <form method="post" action="post/" class="form-horizontal " id="addEditForm">
                <div class="form-group">
                    <label for="selektovan" class="col-sm-5 control-label" style="text-align:left">Agent: </label>
                    <div class="col-sm-1">

                    </div>
                    <div class="col-sm-6">
                        <select class="form-control" id="selektovan"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label" style="text-align:left">Agencijska oznaka: </label>
                    <div class="col-sm-1">

                    </div>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="itemAgencijskaOznaka" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label" style="text-align:left">Mesto: </label>
                    <div class="col-sm-3">

                    </div>
                    <div class="col-sm-4">
                        <input class="form-control" id="itemMesto" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label" style="text-align:left">Godina izgradnje: </label>
                    <div class="col-sm-3">

                    </div>
                    <div class="col-sm-4">
                        <input class="form-control" type="number" id="itemGodinaIzgradnje" step="1" style="text-align:right" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-8 control-label" style="text-align:left">Kvadratura: </label>
                    <div class="col-sm-3">

                    </div>
                    <div class=" col-sm-4">
                        <input class="form-control" type="number" id="itemKvadratura" step="0.01" style="text-align:right" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-5 control-label" style="text-align:left">Cena: </label>
                    <div class="col-sm-3">

                    </div>
                    <div class="col-sm-4">
                        <input class="form-control" type="number" id="itemCena" step="0.01" style="text-align:right" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-4 center-block" style="float: left">
                        <button type="submit" class="btn btn-default button1"> Izmena </button>
                    </div>

                    <div class="col-sm-offset-2 col-sm-4 center-block" style="float: right">
                        <button type="button" class="btn btn-default button3" id="btnQuit"> Odustajanje </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

